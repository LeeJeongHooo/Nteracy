{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ES6",
    "target": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["api/*"],
      "@assets/*": ["assets/*"],
      "@utils/*": ["utils/*"],
      "@background/*": ["background/*"],
      "@content/*": ["content/*"],
      "@popup/*": ["popup/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "./@types"],
  "exclude": ["node_modules"]
}
